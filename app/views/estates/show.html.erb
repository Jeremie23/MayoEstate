<%= render partial: "shared/navbar"%>
<div class="container mt-5">
  <div class="row">
    <!-- Pictures Section -->
    <div class="col-md-6">
      <img src="https://images.unsplash.com/photo-1624804821465-5c7c80f99bd1?q=80&w=1471&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="img-fluid rounded" alt="Appartement">
    </div>

    <!-- Information Section -->
    <div class="col-md-6">
      <h1 class="display-4"><%= @estate.name %></h1>
      <p class="lead text-muted"><%= @estate.description %></p>
      <div class="mb-3">
        <strong>Adresse:</strong>
        <p class="text-muted"><%= @estate.address %></p>
      </div>
      <div class="mb-3">
        <strong>Prix:</strong>
        <p class="text-muted"><%= number_to_currency(@estate.price) %></p>
      </div>
      <div class="mb-3">
        <strong>Caractéristiques:</strong>
        <ul class="list-unstyled">
          <li class="mb-1"><i class="fas fa-bed"></i>  Chambres</li>
          <li class="mb-1"><i class="fas fa-bath"></i> Salles de bain</li>
          <li class="mb-1"><i class="fas fa-expand-arrows-alt"></i> m²</li>
        </ul>
      </div>
      <a href="<%= estates_path %>" class="btn btn-secondary mt-3">Retour à la liste des appartements</a>
    </div>
  </div>
</div>
<%= render partial: "shared/footer"%>
