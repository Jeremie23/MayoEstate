<%= render partial: "shared/navbar"%>
<div class="d-flex justify-content-center my-3">
  <div class="card bg-white" style="width: 30rem;">
    <div class="card-body">
      <h1 class="card-title display-4 mb-4">Vous êtes intéressé ?</h1>

      <%= simple_form_for [@estate, @offer] do |f| %>
        <div class="form-group">
          <%= f.input :comment, input_html: { class: "form-control" }, label: "Laissez un commentaire ci-dessous !" %>
        </div>
        <div class="form-group">
          <%= f.submit "Envoyer", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="mt-3">
        <%= link_to "Retour à la liste des appartements", estates_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>

<%= render partial: "shared/footer"%>
