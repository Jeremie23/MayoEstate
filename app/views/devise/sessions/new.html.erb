<%= render partial: "shared/navbar"%>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card custom-card bg-white">
        <div class="custom-card-header">
          <h2 class="text-center">Connexion</h2>
        </div>
        <div class="custom-card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group custom-form-group">
              <%= f.label :email %>
              <%= f.email_field :email,
                                required: false,
                                autofocus: true,
                                class: "form-control custom-form-control",
                                autocomplete: "email" %>
            </div>

            <div class="form-group custom-form-group">
              <%= f.label :password %>
              <%= f.password_field :password,
                                   required: false,
                                   class: "form-control custom-form-control",
                                   autocomplete: "current-password" %>
            </div>

            <div class="form-group custom-form-group">
              <%= f.label :remember_me, class: "form-check-label" if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me, class: "form-check-input" if devise_mapping.rememberable? %>
            </div>

            <div class="text-center">
              <%= f.button :submit, "Log in", class: "btn btn-primary custom-btn-primary" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
